<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_x_button"
            android:layout_weight="2.35"
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/newItemClose"
            android:padding="3dp"/>
        <EditText
            android:inputType="textCapWords|textAutoComplete|textAutoCorrect"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:hint="Item Name"
            android:textSize="18sp"
            android:id="@+id/newItemName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:text="$"
            android:gravity="center"
            android:textSize="18sp"/>
        <EditText
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:gravity="right"
            android:textSize="18sp"
            android:id="@+id/newItemPrice"/>
    </LinearLayout>

    <EditText
        android:inputType="textCapSentences|textAutoComplete|textAutoCorrect"
        android:id="@+id/newItemDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/squarebox"
        android:gravity="top|left"
        android:hint="Details"
        android:minHeight="100dp"
        android:padding="5dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:inputType="textCapWords|textAutoComplete|textAutoCorrect"
            android:id="@+id/newFoodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Type"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/newItemSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColor"
            android:text="Save"
            android:layout_weight="3.5"
            android:layout_margin="2dp"/>

    </LinearLayout>

</LinearLayout>